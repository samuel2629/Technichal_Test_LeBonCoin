<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_horizontal_cardview"
    android:layout_marginVertical="@dimen/margin_vertical_cardview"
    app:cardElevation="@dimen/elevation_cardview"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/corner_radius_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/padding_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/album_item_image_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <TextView
            android:paddingHorizontal="@dimen/padding_horizontal_textview"
            android:textColor="@color/black"
            android:id="@+id/album_item_title_tv"
            app:layout_constraintStart_toEndOf="@id/album_item_image_iv"
            app:layout_constraintTop_toTopOf="@id/album_item_image_iv"
            app:layout_constraintBottom_toBottomOf="@id/album_item_image_iv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>